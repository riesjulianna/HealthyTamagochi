<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="avatar">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>

    </style>
    <style name="clock">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#e3fffd</item>
    </style>

    <style name="simple_spinner_text">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textColor">#00fbfb</item>
        <item name="android:textColorHint">#457587</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">#00fbfb</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="pont_textView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">#00fbfb</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="textView_kijelentkezes">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">#00fbfb</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="textView2">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="green_button">
