<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regisztráció" />

            <View
                android:id="@+id/divider"
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <EditText
                android:id="@+id/username"
                style="@style/signup_editText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="Felhasználónév"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/password"
                style="@style/signup_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Jelszó"
                android:inputType="textPassword" />


            <EditText
                android:id="@+id/password2"
                style="@style/signup_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Jelszó ismét"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/validPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/emailParent"
                style="@style/signup_editText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ems="10"
                android:hint="Szülő e-mail címe"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/parentEducation"
                style="@style/signup_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Szülő legmagasabb végzettsége"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView15"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lakhely"
                android:textColor="#006366"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/residences"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#bdbdbd" />

            <CheckBox
                android:id="@+id/acceptRules"
                style="@style/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elfogadom az Adatvédelmi Tájékoztatót" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <Button
                android:id="@+id/SignUpButton"
                style="@style/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="registrationClick"
                android:text="Regisztráció" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>